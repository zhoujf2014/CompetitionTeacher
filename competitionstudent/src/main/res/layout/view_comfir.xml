<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_login_view"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        android:id="@+id/view_comfir_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/wancheng2" />

    <TextView
        android:id="@+id/view_comfir_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:text="已完成竞赛项目，用时120分钟"
        android:textColor="@color/textcolor"
        android:textSize="30sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/view_comfir_cancle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_login_height"
            android:background="@drawable/selector_bg_login_confir"
            android:text="退   出"
            android:textSize="20sp" />

        <Button
            android:id="@+id/view_comfir_sure"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_login_height"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_bg_login_confir"
            android:text="确   定"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>