<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing3"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:src="@mipmap/gslogo4" />

        <TextView

            android:id="@+id/updataapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40.5dp"
            android:text="竞赛智能控制系统"
            android:textColor="@color/white"
            android:textSize="38.57sp" />


        <TextView
            android:id="@+id/login_name_ch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="Competition Intelligent Control System"
            android:textColor="@color/white"
            android:textSize="14.69sp" />

        <TextView
            android:id="@+id/login_name_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/bg_login_view"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:textColor="#0777D1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="登录" />

        <EditText
            android:id="@+id/user"
            android:layout_width="@dimen/edit_width"
            android:layout_height="@dimen/edit_height"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_edit"
            android:drawableLeft="@mipmap/yonghuming2"
            android:drawablePadding="3dp"
            android:gravity="center"

            android:inputType="textPassword"
            android:padding="8dp"
            android:textSize="9sp" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="@dimen/edit_width"
            android:layout_height="@dimen/edit_height"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edit"
            android:drawableLeft="@mipmap/mima2"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textSize="9sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="记住密码" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/bt_login_height"
                android:background="@drawable/selector_bg_login_confir"
                android:text="登   录"
                android:textSize="15sp" />

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/bt_login_height"
                android:layout_marginLeft="10dp"
                android:background="@drawable/selector_bg_login_confir"
                android:text="退   出"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>

